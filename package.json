{
  "name": "nestjs-backend-template",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Z1 Digital Studio",
  "scripts": {
    "dev": "tsnd --respawn -r @babel/register --inspect -- src/index.ts",
    "build": "babel ./src -d ./dist --extensions .ts --copy-files",
    "typecheck": "tsc",
    "start": "node dist/index.js",
    "lint:base": "eslint --ext .js,.json,.ts,.graphql",
    "lint": "yarn lint:base src",
    "gql:typings": "tsnd -r @babel/register src/generate-typings.ts",
    "prisma": "prisma",
    "test": "jest",
    "test:debug": "node --inspect ./node_modules/.bin/jest --watch --runInBand --testTimeout 999999",
    "heroku-postbuild": "yarn prisma migrate up --experimental && yarn prisma generate && yarn build",
    "postinstall": "yarn prisma generate"
  },
  "lint-staged": {
    "src/**/*.{js,json,ts,graphql}": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@nestjs/testing": "^7.0.7",
    "@prisma/cli": "^2.0.0-beta.1",
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.11",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.11.1",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.28.0",
    "apollo-server-testing": "^2.11.0",
    "babel-jest": "^25.2.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-graphql": "^3.1.1",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^4.1.0",
    "get-port": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^25.2.4",
    "lint-staged": "^10.1.3",
    "module-alias": "^2.2.2",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "@nestjs/common": "^7.0.7",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.7",
    "@nestjs/graphql": "^7.2.4",
    "@nestjs/platform-fastify": "^7.0.7",
    "@prisma/client": "^2.0.0-beta.1",
    "apollo-server-fastify": "^2.11.0",
    "dotenv": "^8.2.0",
    "fastify": "^2.13.1",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "ms": "^2.1.2",
    "reflect-metadata": "^0.1.13"
  }
}

{
  "name": "nestjs-backend-template",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Z1 Digital Studio",
  "scripts": {
    "dev": "tsnd --respawn -r @babel/register --inspect -- src/index.ts",
    "build": "babel ./src -d ./dist --extensions .ts --copy-files",
    "typecheck": "tsc",
    "start": "node dist/index.js",
    "lint:base": "eslint --ext .js,.json,.ts,.graphql",
    "lint": "yarn lint:base src",
    "gql:typings": "graphql-codegen --config codegen.yml",
    "prisma": "prisma",
    "test": "jest",
    "test:debug": "node --inspect ./node_modules/.bin/jest --watch --runInBand --testTimeout 999999",
    "heroku-postbuild": "yarn prisma migrate up --experimental && yarn prisma generate && yarn build",
    "postinstall": "yarn prisma generate"
  },
  "lint-staged": {
    "src/**/*.{js,json,ts,graphql}": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/register": "^7.10.1",
    "@graphql-codegen/add": "^1.15.3",
    "@graphql-codegen/cli": "1.15.3",
    "@graphql-codegen/typescript": "1.15.3",
    "@graphql-codegen/typescript-resolvers": "1.15.3",
    "@nestjs/testing": "^7.1.3",
    "@prisma/cli": "^2.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.12",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.0.13",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "apollo-server-testing": "^2.14.4",
    "babel-jest": "^26.0.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "get-port": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "module-alias": "^2.2.2",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.48",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": "12.x.x"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "@nestjs/common": "^7.1.3",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.1.3",
    "@nestjs/graphql": "^7.4.1",
    "@nestjs/platform-fastify": "^7.1.3",
    "@prisma/client": "^2.0.0",
    "apollo-server-fastify": "^2.14.4",
    "dotenv": "^8.2.0",
    "fastify": "^2.14.1",
    "graphql": "^15.1.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalar": "^0.0.11",
    "graphql-tools": "^6.0.9",
    "ms": "^2.1.2",
    "reflect-metadata": "^0.1.13"
  }
}
